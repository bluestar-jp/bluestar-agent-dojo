{
  "context": {
    "fileName": ".gemini/context.md"
  },
  "experimental": {
    "enableAgents": true,
    "skills": true
  },
  "skills": {
    "enabled": true
  },
  "hooks": {
    "AfterTool": [
      {
        "matcher": "^(edit_file|create_file|write_file)$",
        "hooks": [
          {
            "type": "command",
            "command": "./scripts/lint-markdown.sh",
            "name": "lint-markdown-after-file-edit",
            "description": "Runs markdown linter after file modification tools."
          }
        ]
      }
    ]
  }
}
